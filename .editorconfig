# EditorConfig is awesome!
# https://editorconfig.org

# Top most config
root = true

# Config for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.{json,yaml,yml}]
indent_size = 2

# Config for Makefiles
[Makefile]
indent_style = tab

# Config for Markdown
[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_size = 4
